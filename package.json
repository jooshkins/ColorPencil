{
  "name": "colorpencil",
  "productName": "colorpencil",
  "version": "0.1.0",
  "description": "a simple tool for end users to manage permissions",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "colorpencil",
    "asar": false,
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ],
          "config": {
            "name": "colorpencil"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": [
            "linux"
          ],
          "config": {}
        }
      ]
    }
  },
  "keywords": [],
  "author": "jooshkins",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.3.1",
    "node-powershell": "^3.3.1",
    "popper.js": "^1.14.3",
    "powershell": "^2.3.0"
  },
  "devDependencies": {
    "@electron-forge/maker-squirrel": "^6.0.0-beta.1",
    "electron": "2.0.0",
    "electron-builder": "^20.13.3",
    "electron-forge": "^5.2.0"
  }
}
